<suki:SukiWindow
    x:Class="ThankYouLetter.Views.Windows.RootView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:vmw="clr-namespace:ThankYouLetter.ViewModels.Windows"
    Title="ThankYouLetter"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vmw:RootViewModel"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding Greeting}" />
        <Button Command="{Binding ShowErrorCommand}" Content="Show Error" />
    </StackPanel>

</suki:SukiWindow>